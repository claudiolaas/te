# Binance API Credentials
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Database
# SQLite database file path (relative or absolute)
DB_PATH=./data/trading.db

# Backfill Configuration
# Number of minutes of historical data to fetch when registering a new symbol
BACKFILL_MINUTES=5

# Heartbeat Configuration
# The heartbeat triggers every minute (60s), aligned to the clock
# BUFFER_DELAY adds a configurable delay after the minute mark (default: 5s)
# This ensures Binance minute candles are closed before fetching
HEARTBEAT_INTERVAL=60
HEARTBEAT_BUFFER_DELAY=5

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Log directory for per-component logs
LOG_DIR=./logs

# Trading (Future Use)
# Set to "true" to enable actual trading (currently not implemented)
# PAPER_TRADING=false
